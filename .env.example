# Azure Container Apps Configuration
# Copy this file to .env and fill in your actual values
# Never commit .env to git!

# Backend URL (internal URL for production, localhost for dev)
BACKEND_URL_EXTERNAL=https://healthcheck-backend.internal.YOUR_ENV.eastus.azurecontainerapps.io

# Azure Storage Account
STORAGE_BASE_URL=https://YOUR_STORAGE_ACCOUNT.blob.core.windows.net

# Azure AD Authentication (optional - only needed if using Easy Auth)
TENANT_ID=your-tenant-id-here
CLIENT_ID=your-client-id-here
CLIENT_SECRET=your-client-secret-here

# Port (optional, defaults to 3000 for frontend, 5000 for backend)
PORT=3000
